<script type="text/javascript">
    var elems = Array.prototype.slice.call(document.querySelectorAll('.switchery'));

    elems.forEach(function (html) {
        var switchery = new Switchery(html);
        html.onchange = function () {
            filterData();
        };
    });

    var gmarkers = [];
    var map;
    var markers = {{ markers|raw }};

    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            zoom: 5,
            center: {lat: 48.384098, lng: 7.970846}
        });
        setMarkers(map, markers);
    }

    function setMarkers(map, markers) {
        // Adds markers to the map.
        for (var i = 0; i < markers.length; i++) {
            var beach = markers[i];
            //console.log(beach)
            var marker = new google.maps.Marker({
                position: {lat: beach['latitude'], lng: beach['longitude']},
                map: map,
                title: beach['name'],
                label: beach['nb'],
                zindex: i
            });
            gmarkers.push(marker);
        }
    }

    function removeMarkers() {
        for (i = 0; i < gmarkers.length; i++) {
            gmarkers[i].setMap(null);
        }
    }

    function filterData() {
        console.log('filtering');
        $.ajax({
            url: '/fr/map/markers',
            type: "GET",
            data: $("form").serialize()
        }).done(function (data) {
            console.log('done ajax');
            removeMarkers();
            setMarkers(map, data);
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD9GhjdRtYf1BNtxx-rLJJwNl2n2CDUev4&callback=initMap">
</script>
