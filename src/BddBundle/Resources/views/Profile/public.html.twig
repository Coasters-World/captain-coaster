{% extends "base.html.twig" %}

{% set title = 'user_profile.title'|trans({'%name%': user.displayName}) %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-3">
            <div class="row">
                <!-- infos user -->
                <div class="panel">
                    <div class="panel-body text-center">
                        <div  class="display-inline-block">
                            <img src="{{ asset(user.profilePicture) }}"
                                 class="img-circle img-responsive"
                                 alt="{{ user.displayName }}"
                                 style="width: 75px; height: 75px;">
                        </div>

                        <h6 class="text-semibold no-margin-bottom">
                            {{ user.displayName }}
                        </h6>
                    </div>

                    <div class="list-group no-border no-padding-top">
                        <a href="{{ path('user_ratings', {'id': user.id}) }}" class="list-group-item">
                            <i class="icon-stars"></i>
                            {{ 'user_profile.ratings'|trans }}
                            <span class="badge bg-teal-400 pull-right">{{ user.ratings|length }}</span>
                        </a>
                        {% if user.listes|length > 0 %}
                        <a href="{{ path('liste_show', {'id': user.listes.first.id}) }}" class="list-group-item">
                            <i class="icon-podium"></i>
                            {{ 'user_profile.listes'|trans }}
                        </a>
                        {% endif %}
                    </div>
                </div>
                <!-- /infos user -->
            </div>
        </div>
        <div class="col-sm-9">
            <div class="row">
                <div class="col-sm-12">
                    <!-- badges -->
                    <div class="panel panel-flat">
                        <div class="panel-heading">
                            <h3 class="panel-title">{{ 'me.badge'|trans }}</h3>
                        </div>

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-3" style="margin-bottom: 40px;">
                                    <img src="{{ asset('images/badges/bienvenue-'~app.request.locale~'.png') }}"/>
                                </div>
                                {% for badge in user.badges %}
                                    <div class="col-sm-3" style="margin-bottom: 40px;">
                                        <img src="{{ asset('images/badges/'~badge.filename(app.request.locale)) }}"/>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <!-- /badges -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
