<div class="page-header page-header-default">
  <div class="page-header-content">
    <div class="page-title{% if hideTitle|default(false) == true %} hidden-xs{% endif %}">
      <h1>
        <span class="text-semibold">{{ title }}</span>{% if subTitle %} â€¢ {{ subTitle }}{% endif %}
      </h1>
    </div>
    <div class="heading-elements {% if showSearchBar|default(true) == true %}visible-elements{% endif %}">
      <form class="heading-form" action="#">
        <div class="form-group">
          <div class="has-feedback">
            <input id="search-coaster" type="search" class="form-control border-blue-600 border-lg"
                   placeholder="{{ 'app.header.search'|trans }}">
            <div class="form-control-feedback"><i class="icon-search4 text-size-small text-muted"></i></div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
